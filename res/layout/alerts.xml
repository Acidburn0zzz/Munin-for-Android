<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<TextView
		android:id="@+id/hideNoAlerts"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#333333"
		android:clickable="true"
		android:onClick="onClick"
		android:paddingBottom="6dp"
		android:paddingLeft="15dp"
		android:paddingTop="6dp"
		android:text="@string/text49.2"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="#ffffff" />

	<ScrollView
		android:id="@+id/alerts_scrollview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#f2f2f2"
		android:orientation="vertical" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="@dimen/listview_horizontal_margin"
			android:paddingRight="@dimen/listview_horizontal_margin" >

			<LinearLayout
				android:id="@+id/alerts_root_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" />
		</LinearLayout>
	</ScrollView>

</LinearLayout>
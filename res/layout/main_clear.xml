			android:background="@drawable/blue_button" android:drawablePadding="15sp" android:drawableTop="@drawable/icon_graphs" android:gravity="center" android:paddingTop="-15dp" android:text="@string/button_graphs" /> <Button android:id="@+id/serverContainer" style="@style/ButtonText" android:layout_width="wrap_content" 
			android:layout_height="wrap_content" android:background="@drawable/blue_button" android:drawablePadding="15sp" android:drawableTop="@drawable/icon_servers" android:gravity="center" android:paddingTop="-15dp" android:text="@string/button_server" /> <Button android:id="@+id/settingsContainer" style="@style/ButtonText" 
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/blue_button" android:drawablePadding="15sp" android:drawableTop="@drawable/icon_settings" android:gravity="center" android:paddingTop="-15dp" android:text="@string/button_settings" /> <Button android:id="@+id/premiumContainer" 
			style="@style/ButtonText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/blue_button" android:drawablePadding="15sp" android:drawableTop="@drawable/icon_premium" android:gravity="center" android:paddingTop="-15dp" android:text="@string/button_premium" 
			/> <Button android:id="@+id/alertsContainer" style="@style/ButtonText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/blue_button" android:drawablePadding="15sp" android:drawableTop="@drawable/icon_alerts" android:gravity="center" android:paddingTop="-15dp" 
			android:text="@string/button_alerts" /> <Button android:id="@+id/notificationsContainer" style="@style/ButtonText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/blue_button" android:drawablePadding="15sp" android:drawableTop="@drawable/icon_alerts" 
			android:gravity="center" android:paddingTop="-15dp" android:text="@string/button_notifications" /> <Button android:id="@+id/aboutContainer" style="@style/ButtonText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/blue_button" android:drawablePadding="15sp" 

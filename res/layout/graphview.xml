<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#F0F0F0"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#333333"
		android:paddingTop="6dp" >

		<org.taptwo.android.widget.TitleFlowIndicator
			android:id="@+id/viewflowindic"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:clipPadding="2dp"
			app:customTypeface="RobotoCondensed-Regular.ttf"
			app:footerColor="#f0f0f0"
			app:footerLineHeight="0dp"
			app:footerTriangleHeight="5dp"
			app:selectedColor="#f0f0f0"
			app:selectedSize="14dp"
			app:textColor="#cccccc"
			app:textSize="12sp"
			app:textSize2="12sp"
			app:titlePadding="30dp" />
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<org.taptwo.android.widget.ViewFlow
			android:id="@+id/viewflow"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:sidebuffer="1" />

		<!-- Sélection de la période -->

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:background="#DDF0F0F0"
			android:orientation="vertical" >

			<Spinner
				android:id="@+id/spinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</RelativeLayout>

		<!-- Compatibility - Top bar for Android 2.X -->

		<RelativeLayout
			android:id="@+id/comp_relativelayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:visibility="gone" >

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:orientation="horizontal" >

				<ImageButton
					android:id="@+id/comp_previous"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:contentDescription="@string/menu_graph_previous"
					android:src="@drawable/ic_menu_back" />

				<ImageButton
					android:id="@+id/comp_list"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_action_overflow" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:orientation="horizontal" >

				<ImageButton
					android:id="@+id/comp_refresh"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:contentDescription="@string/menu_graph_refresh"
					android:src="@drawable/ic_menu_refresh" />

				<ImageButton
					android:id="@+id/comp_next"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:contentDescription="@string/menu_graph_next"
					android:src="@drawable/ic_menu_forward" />
			</LinearLayout>
		</RelativeLayout>

		<LinearLayout
			android:id="@+id/serverSwitch_mask"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#44000000"
			android:orientation="vertical"
			android:visibility="gone" />

		<ListView
			android:id="@+id/serverSwitch_listview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:background="#88FFFFFF"
			android:visibility="gone" />
	</RelativeLayout>

</LinearLayout>
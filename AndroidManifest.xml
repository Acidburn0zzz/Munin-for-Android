<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.chteuchteu.munin"
	android:versionCode="33"
	android:versionName="3" >

	<!-- SDK Version -->
	<uses-sdk
		android:minSdkVersion="11"
		android:targetSdkVersion="20" />

	<!-- Permissions -->
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

	<!-- Bug Fix (font size with locale) -->
	<supports-screens
		android:anyDensity="true"
		android:largeScreens="true"
		android:normalScreens="true"
		android:smallScreens="true" />

	<application
		android:allowBackup="true"
		android:configChanges="locale|layoutDirection"
		android:icon="@drawable/launcher_icon"
		android:label="@string/app_name"
		android:theme="@style/MyAppTheme" >
		<activity android:name="com.chteuchteu.munin.ui.Activity_About" />
		<activity
			android:name="com.chteuchteu.munin.ui.Activity_Alerts"
			android:configChanges="orientation|screenSize|keyboardHidden" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_AlertsPluginSelection" />
		<activity
			android:name="com.chteuchteu.munin.ui.Activity_Server"
			android:configChanges="orientation|screenSize|keyboardHidden"
			android:windowSoftInputMode="stateHidden|adjustResize" />
		<activity
			android:name="com.chteuchteu.munin.ui.Activity_GraphView"
			android:configChanges="orientation|screenSize|keyboardHidden"
			android:theme="@style/NoActionBarShadow" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_Grid" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_GridSelection" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_Labels" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_LabelsPluginSelection" />
		<activity
		    android:name="com.chteuchteu.munin.ui.Activity_Main"
		    android:icon="@drawable/launcher_icon"
			android:label="@string/app_name"
			android:theme="@style/MyAppTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.chteuchteu.munin.ui.Activity_Notifications" />
		<activity
			android:name="com.chteuchteu.munin.ui.Activity_PluginSelection"
			android:theme="@style/NoActionBarShadow" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_ServersEdit" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_Servers" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_Settings" />
		<activity android:name="com.chteuchteu.munin.ui.Activity_GoPremium" />

		<!-- Widget -->
		<receiver android:name="com.chteuchteu.munin.Widget_GraphWidget" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
				<action android:name="android.appwidget.action.APPWIDGET_DELETED" />
				<action android:name="com.chteuchteu.munin.widget.UPDATE_GRAPH" />
				<action android:name="com.chteuchteu.munin.widget.START_ACTIVITY" />
				<action android:name="com.chteuchteu.munin.widget.START_PREMIUM" />
			</intent-filter>

			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/graph_widget_meta" />
		</receiver>

		<activity
			android:name="com.chteuchteu.munin.Widget_Configure"
			android:theme="@android:style/Theme.Dialog" >
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>

		<!-- Notifications -->
		<receiver android:name=".BootReceiver" >
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>

		<service
			android:name=".Service_Notifications"
			android:enabled="true" />

		<meta-data
			android:name="com.crashlytics.ApiKey"
			android:value="b7bc84aa870bd35d3de03f69309f1748a52354a4" />
	</application>

</manifest>
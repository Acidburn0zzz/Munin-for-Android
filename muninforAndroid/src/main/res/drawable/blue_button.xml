<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape>
					<solid android:color="#1C93DA" />
				</shape>
			</item>
			<item android:bottom="3dp">
				<shape>
					<gradient
						android:startColor="#1A8BDB"
						android:centerColor="#2399E1"
						android:endColor="#30A6E5"
						android:angle="270" />
					<padding
						android:left="10dp"
						android:top="10dp"
						android:right="10dp"
						android:bottom="10dp" />
				</shape>
			</item>
		</layer-list>
	</item>

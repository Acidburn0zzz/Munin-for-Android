<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="TextAppearance">
		<item name="textColor">#ffffff</item>
		<item name="textColorHighlight">?android:attr/textColorHighlight</item>
		<item name="textColorHint">?android:attr/textColorHint</item>
		<item name="textColorLink">?android:attr/textColorLink</item>
		<item name="textSize">16sp</item>
	</style>

	<style name="LightEditText" parent="android:Theme.Holo">
		<item name="android:editTextStyle">@android:style/Widget.EditText</item>
		<item name="android:editTextBackground">@android:drawable/edit_text</item>
	</style>

	<style name="ButtonText">
		<item name="android:layout_width">220dp</item>
		<item name="android:layout_height">60dp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_margin">5dp</item>
		<item name="android:textSize">26sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#145F9D</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">2</item>
	</style>


	<style name="Material_SubTitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/statusBarColor</item>
		<item name="android:paddingTop">15dp</item>
		<item name="android:paddingBottom">10dp</item>
	</style>

	<style name="Material_Divider">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">#DCDCDC</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
	</style>

	<style name="Material_Divider_ListViewItem">
		<item name="android:layout_height">1dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">#99DCDCDC</item>
		<item name="android:layout_marginTop">2dp</item>
	</style>

	<style name="Settings_SettingTitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:textColor">#444444</item>
	</style>

	<style name="Settings_SettingSpinner">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginRight">15dp</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="Settings_SettingEditText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginRight">15dp</item>
		<item name="android:layout_gravity">right</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="Settings_Checkbox_Container">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Settings_Checkbox_Label">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginRight">50dp</item><!-- checkbox margin right + checkbox width + checkbox margin left -->
		<item name="android:textColor">#666666</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Settings_Checkbox">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">15dp</item>
		<item name="android:layout_alignParentRight">true</item>
	</style>

	<style name="Material_ListItem_Line1">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_marginBottom">1dp</item>
		<item name="android:maxLines">2</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:alpha">0.87</item>
	</style>

	<style name="Material_ListItem_Line2">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:maxLines">2</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:alpha">0.54</item>
	</style>

	<style name="Material_ListItem_Icon">
		<item name="android:layout_width">30dp</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_marginRight">13dp</item>
		<item name="android:layout_marginTop">10dp</item>
	</style>

	<style name="Material_ListHeader">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">@color/statusBarColor</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">55dp</item>
	</style>

	<style name="Material_ExpandableListHeader">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">17sp</item>
		<item name="android:paddingLeft">25dp</item>
		<item name="android:textColor">@color/statusBarColor</item>
	</style>

	<style name="Material_Title1_Light">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:shadowColor">#88000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:maxLines">2</item>
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">#ffffff</item>
	</style>

	<style name="Material_Title2_Light">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">4dp</item>
		<item name="android:shadowColor">#88000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:maxLines">2</item>
		<item name="android:textSize">19sp</item>
		<item name="android:textColor">#ddffffff</item>
	</style>

	<style name="Material_FieldHint">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginBottom">2dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#66000000</item>
	</style>

	<style name="Drawer_Item">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:background">@drawable/drawer_button</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingLeft">@dimen/item_padding</item>
		<item name="android:paddingRight">@dimen/item_padding</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="Drawer_SmallItem">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">35dp</item>
		<item name="android:background">@drawable/drawer_button</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:paddingLeft">@dimen/item_padding</item>
		<item name="android:paddingRight">@dimen/item_padding</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="Drawer_Item_Icon">
		<item name="android:layout_width">26dp</item>
		<item name="android:layout_height">26dp</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="Drawer_Item_Text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">28dp</item>
		<item name="android:textColor">#dddddd</item>
		<item name="android:textSize">@dimen/drawer_font_size</item>
	</style>

	<style name="Drawer_SmallItem_Icon">
		<item name="android:layout_width">20dp</item>
		<item name="android:layout_height">20dp</item>
		<item name="android:layout_marginLeft">3dp</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="Drawer_SmallItem_Text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">28dp</item>
		<item name="android:textColor">#dddddd</item>
		<item name="android:textSize">@dimen/drawer_font_size_small</item>
	</style>

	<style name="Material_ButtonText">
		<item name="android:textColor">#555555</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:shadowColor">#d4d4d4</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:background">@drawable/material_button_xml</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingTop">7dp</item>
		<item name="android:paddingBottom">9dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="Material_SmallButtonText">
		<item name="android:textColor">#555555</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:shadowColor">#d4d4d4</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:background">@drawable/material_button_xml</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">7dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="SimpleHorizLinearLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="BigText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal|center_vertical</item>
		<item name="android:shadowColor">#ffffff</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">2</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:textColor">#4E5258</item>
		<item name="android:textSize">32sp</item>
	</style>

</resources>

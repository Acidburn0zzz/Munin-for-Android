<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="textAppearance">@style/TextAppearance</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>

		<!-- ...and here we setting appcompat’s color theming attrs -->
		<item name="colorPrimary">@color/actionBarColor</item>
		<item name="colorPrimaryDark">@color/statusBarColor</item>
		<item name="colorAccent">@color/actionBarColor</item>

		<!-- Theme-specific attributes -->
		<item name="grayTextColor">#4E5258</item>
	</style>

	<style name="Theme.Dark" parent="ThemeOverlay.AppCompat.Dark">
		<item name="textAppearance">@style/TextAppearance</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>

		<!-- ...and here we setting appcompat’s color theming attrs -->
		<item name="colorPrimary">@color/actionBarColor</item>
		<item name="colorPrimaryDark">@color/statusBarColor</item>
		<item name="colorAccent">@color/actionBarColor</item>

		<!-- Theme-specific attributes -->
		<item name="grayTextColor">#b5bac1</item>
	</style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="textAppearance">@style/TextAppearance</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>

		<!-- ...and here we setting appcompat’s color theming attrs -->
		<item name="colorPrimary">@color/actionBarColor</item>
		<item name="colorPrimaryDark">@color/statusBarColor</item>
		<item name="colorAccent">@color/actionBarColor</item>

		<!-- Theme-specific attributes -->
		<item name="grayTextColor">#000000</item>
		<item name="grayTextColorOpacity">0.54</item>
		<item name="cardBackground">@drawable/card</item>
		<item name="subtitleColor">#1565C0</item>
		<item name="dividerColor">#DCDCDC</item>
		<item name="title2TextColor">#000000</item>
		<item name="title2TextOpacity">0.87</item>
		<item name="alerts_mastername_text_color">#888888</item>
	</style>

	<style name="Theme.Dark" parent="ThemeOverlay.AppCompat.Dark">
		<item name="textAppearance">@style/TextAppearance</item>
		<item name="android:windowNoTitle">true</item>
		<item name="windowActionBar">false</item>

		<!-- ...and here we setting appcompat’s color theming attrs -->
		<item name="colorPrimary">@color/actionBarColor</item>
		<item name="colorPrimaryDark">@color/statusBarColor</item>
		<item name="colorAccent">@color/actionBarColor</item>

		<!-- Theme-specific attributes -->
		<item name="grayTextColor">#ffffff</item>
		<item name="grayTextColorOpacity">0.70</item>
		<item name="cardBackground">@drawable/card_dark</item>
		<item name="subtitleColor">#1580dc</item>
		<item name="dividerColor">#757575</item>
		<item name="title2TextColor">#ffffff</item>
		<item name="title2TextOpacity">0.70</item>
		<item name="alerts_mastername_text_color">#c0c0c0</item>
	</style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="MyAppTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
		<item name="textAppearance">@style/TextAppearance</item>
		<item name="android:actionBarStyle">@style/ActionBar</item>
		<item name="android:actionOverflowButtonStyle">@style/AppTheme_ActionBar_Overflow</item>
		<item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
		<item name="android:actionBarSize">@dimen/action_bar_height</item>
	</style>

	<style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="NoActionBarShadow" parent="MyAppTheme">
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<!-- ACTION BAR -->
	<style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">@color/actionBarColor</item>
		<item name="android:titleTextStyle">@style/ActionBarTitleAppearance</item>
		<item name="android:subtitleTextStyle">@style/ActionBarSubtitleAppearance</item>
		<item name="android:icon">@drawable/actionbariconpadding</item>
		<item name="android:actionMenuTextColor">#ffffff</item>
	</style>

	<style name="AppTheme_ActionBar_Overflow" parent="android:Widget.ActionButton.Overflow">
		<item name="android:src">@drawable/ic_ab_overflow_compat</item>
	</style>

	<style name="ActionBarTitleAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">21sp</item>
	</style>

	<style name="ActionBarSubtitleAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Subtitle">
		<item name="android:textColor">#ffffff</item>
	</style>

</resources>
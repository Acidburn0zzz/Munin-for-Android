<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		style="@style/Toolbar" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingLeft="@dimen/listview_horizontal_margin"
		android:paddingRight="@dimen/listview_horizontal_margin"
		android:background="@drawable/bottom_shadow" >

		<LinearLayout
			android:id="@+id/container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginTop="15dp"
			android:background="@drawable/card"
			android:orientation="vertical"
			android:paddingBottom="20dp"
			android:paddingTop="20dp" >

			<RelativeLayout
				style="@style/Settings_Checkbox_Container"
				android:tag="checkable">

				<TextView
					android:id="@+id/test"
					style="@style/Settings_Checkbox_Label"
					android:text="@string/text52"/>
				<CheckBox
					android:id="@+id/checkbox_notifications"
					style="@style/Settings_Checkbox"
					android:layout_alignParentRight="true"/>
			</RelativeLayout>

			<LinearLayout
				android:id="@+id/notificationsEnabled"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<View style="@style/Material_Divider" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp">

					<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="15dp"
						android:layout_marginTop="5dp">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="35dp"
							android:textColor="#666666"
							android:textSize="14sp"
							android:text="@string/notifications_device_code" />

						<TextView
							android:id="@+id/device_code"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true" />
					</RelativeLayout>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="@string/notifications_instructions" />

					<Button
						android:id="@+id/sendByMail"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/notifications_sendByMail"
						android:layout_gravity="center_horizontal"
						android:layout_marginBottom="15dp" />
				</LinearLayout>

				<RelativeLayout
					style="@style/Settings_Checkbox_Container"
					android:tag="checkable">

					<TextView
						style="@style/Settings_Checkbox_Label"
						android:text="@string/notifs_vibrate"/>
					<CheckBox
						android:id="@+id/checkbox_vibrate"
						style="@style/Settings_Checkbox"/>
				</RelativeLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:fitsSystemWindows="true" >

	<include layout="@layout/incl_actionbar" />

	<com.chteuchteu.munin.HackyDrawerLayout
		android:id="@+id/drawerLayout"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			xmlns:fab="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:background="@drawable/bottom_shadow">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/actionBarColor"
					android:orientation="vertical"
					android:paddingTop="4dp" >

					<org.taptwo.android.widget.TitleFlowIndicator
						android:id="@+id/viewflowindic"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="6dp"
						app:clipPadding="6dp"
						app:customTypeface="RobotoCondensed-Regular.ttf"
						app:footerColor="#f0f0f0"
						app:footerLineHeight="0dp"
						app:footerTriangleHeight="5dp"
						app:selectedColor="#f0f0f0"
						app:selectedSize="15dp"
						app:textColor="#f0f0f0"
						app:textSize="13sp"
						app:textSize2="13sp"
						app:titlePadding="40dp" />
				</LinearLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical" >

					<org.taptwo.android.widget.ViewFlow
						android:id="@+id/viewflow"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:paddingTop="5dp"
						app:sidebuffer="1" />

					<LinearLayout
						android:id="@+id/serverSwitch_mask"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="#88000000"
						android:orientation="vertical"
						android:visibility="gone" />

					<ListView
						android:id="@+id/serverSwitch_listview"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_alignParentBottom="true"
						android:background="#88FFFFFF"
						android:visibility="gone" />
				</RelativeLayout>
			</LinearLayout>

			<com.melnykov.fab.FloatingActionButton
				android:id="@+id/fab"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|right"
				android:layout_margin="16dp"
				android:src="@drawable/ic_action_help"
				fab:fab_type="mini"
				fab:fab_colorNormal="@color/primary"
				fab:fab_colorPressed="@color/primary_pressed"
				fab:fab_colorRipple="@color/ripple" />

			<Button
				android:id="@+id/dynazoomTest"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="DZ"
				android:layout_gravity="bottom|left" />

			<LinearLayout
				android:id="@+id/documentation"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="gone"
				android:orientation="vertical">

				<FrameLayout
					android:id="@+id/imageAndText"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="3"
					android:background="#000000"><!-- Background is set to darken the ImageView -->

					<ImageView
						android:id="@+id/doc_imageview"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_gravity="center"
						android:contentDescription="@string/graphView_ImageViewDescription"
						android:scaleType="centerCrop"
						android:alpha="0.9"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/material_blackgradient"
						android:layout_gravity="bottom"
						android:orientation="vertical"
						android:paddingLeft="30dp"
						android:paddingRight="30dp"
						android:paddingTop="20dp"
						android:paddingBottom="5dp">

						<TextView
							android:id="@+id/doc_line1"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							style="@style/Material_Title1_Light"/>

						<TextView
							android:id="@+id/doc_line2"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							style="@style/Material_Title2_Light"/>

					</LinearLayout>
				</FrameLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="7"
					android:orientation="vertical"
					android:background="#ffffff">

					<Spinner
						android:id="@+id/doc_spinner"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:layout_marginTop="5dp"
						android:visibility="gone"/>

					<View
						android:id="@+id/doc_divider"
						style="@style/Material_Divider"
						android:visibility="gone"/>

					<ScrollView
						android:id="@+id/doc_scrollview"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<TextView
							android:id="@+id/doc"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingLeft="30dp"
							android:paddingRight="30dp"
							android:paddingTop="15dp"
							android:paddingBottom="10dp"/>

					</ScrollView>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/dynazoom"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:visibility="gone">

				<LinearLayout
					android:id="@+id/dynazoom_params"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingLeft="30dp"
					android:paddingTop="10dp"
					android:background="#ffffff">
					
					<TextView
						android:id="@+id/dynazoom_pluginName"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginRight="10dp"
						android:layout_marginBottom="4dp"
						android:shadowColor="#88000000"
						android:shadowDx="1"
						android:shadowDy="1"
						android:shadowRadius="2"
						android:maxLines="2"
						android:textSize="19sp"
						android:textColor="#bb000000" />

					<TextView
						android:text="@string/from"
						style="@style/Material_FieldHint" />
					<TextView
						android:id="@+id/dynazoom_from"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginRight="10dp"
						android:layout_marginBottom="4dp"
						android:maxLines="2"
						android:textSize="16sp"
						android:textColor="#bb000000" />

					<TextView
						android:text="@string/to"
						style="@style/Material_FieldHint" />
					<TextView
						android:id="@+id/dynazoom_to"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginRight="10dp"
						android:layout_marginBottom="4dp"
						android:maxLines="2"
						android:textSize="16sp"
						android:textColor="#bb000000" />
					
					<com.edmodo.rangebar.RangeBar
						xmlns:rangebar="http://schemas.android.com/apk/res-auto"
						android:id="@+id/dynazoom_rangebar"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="110px"
						android:layout_marginRight="30px"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="5dp"
						rangebar:barWeight="1dp"
						rangebar:connectingLineWeight="1dp"
						rangebar:connectingLineColor="#3F51B5"
						rangebar:thumbRadius="3dp"
						rangebar:barColor="#d3d3d3"
						rangebar:thumbColorNormal="#3F51B5"
						rangebar:thumbColorPressed="#4c5eff"
						rangebar:tickHeight="3dp"
						android:layout_gravity="bottom" />
				</LinearLayout>

				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/gray_gradient"
					android:padding="10dp">
					<ImageView
						android:id="@+id/dynazoom_imageview"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:adjustViewBounds="true"
						android:contentDescription="@string/graphView_ImageViewDescription"
						android:gravity="center"
						android:scaleType="fitCenter"/>
					<ProgressBar
						android:id="@+id/dynazoom_progressbar"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal|center_vertical"/>
					<View
						android:id="@+id/dynazoom_highlight"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="#55000000"
						android:gravity="center_vertical"
						android:layout_gravity="top|left"/>
				</FrameLayout>
			</LinearLayout>
		</FrameLayout>

		<LinearLayout
			android:layout_width="@dimen/drawer_width"
			android:layout_height="match_parent"
			android:layout_gravity="start">
			<include layout="@layout/incl_drawer" />
		</LinearLayout>

	</com.chteuchteu.munin.HackyDrawerLayout>

</LinearLayout>